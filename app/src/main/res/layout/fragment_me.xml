<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/user_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_account_circle_white" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="许蒙"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <com.lisao.attendancesystemclient.widget.SettingView
        android:id="@+id/setting_my_attend"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:setting_name="我的签到" />

    <com.lisao.attendancesystemclient.widget.SettingView
        android:id="@+id/setting_suggest"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:setting_name="意见吐槽" />

    <com.lisao.attendancesystemclient.widget.SettingView
        android:id="@+id/setting_version"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:setting_name="版本号" />

    <com.lisao.attendancesystemclient.widget.IOSButton
        android:id="@+id/btn_quit_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:text="退出登录"
        app:btn_strokeWidth="0dp"
        app:btn_text_unpressColor="@color/colorWhite"
        app:btn_unpressColor="@color/color_red" />
</LinearLayout>