<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lisao.attendancesystemclient.widget.CustomActionBarHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_title="课表"
        app:only_title="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lisao.attendancesystemclient.widget.ScheduleTableView
            android:id="@+id/time_schedule"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"></com.lisao.attendancesystemclient.widget.ScheduleTableView>
    </ScrollView>
</LinearLayout>